<!DOCTYPE html>
<html>
<head>
    <% include ../partials/scripts.ejs %>
    <script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>

</head>
<body class="animsition">
<div class="shop-layout-3" id="page">
    <% include ../partials/header.ejs %>

    <section >
        <div class="container" style="width: 100%">
            <div class="row">
                <% include ../partials/adminheader.ejs %>


                <div class="col-md-8">

                    <div class="container text-left">

                        <div class="row form-contact" style="margin-right: 150px">
                            <div class="row main">
                                <% if(data) { %>
                                <% data.forEach(function (video) { %>
                                <form action='/admin/videos/<%= video._id%>' method='post'>

                                    <div class="col-md-6">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Naslov: </label>
                                            <input class="form-control" name="title" id="title" type="text" value="<%= video.title %>">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Opis: </label>
                                            <textarea class="form-control" id="description" name="description" ><%- video.description %></textarea>
                                            <script>
                                                CKEDITOR.replace( 'description' );
                                            </script>

                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Vimeo ID: </label>
                                            <input class="form-control" name="url" id="url" type="text" value="<%= video.url.slice(18, 30) %>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Premium: </label>
                                            <select  class="form-control" name="premium" id="premium">
                                                <option value="<%= video.premium %>"><%= video.premium %></option>
                                                <option value="true">Premium</option>
                                                <option value="false">Regular</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group organic-form xs-radius">
                                            <button class="btn btn-brand pill" type="submit" name="Submit">Update Video</button>
                                        </div>
                                    </div>
                                </form>
                                <% })} %>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </section>
</div>
<% include ../partials/footer.ejs %>

</body>
</html>



