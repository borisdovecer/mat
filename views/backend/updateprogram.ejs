<!DOCTYPE html>
<html>
<head>
    <% include ../partials/scripts.ejs %>
    <script src="https://cdn.ckeditor.com/4.14.0/standard/ckeditor.js"></script>

</head>
<body class="animsition">
<div class="shop-layout-3" id="page">
    <% include ../partials/header.ejs %>

    <section >
        <div class="container" style="width: 100%">
            <div class="row">
                <% include ../partials/adminheader.ejs %>


                <div class="col-md-8">

                    <div class="container text-left">

                        <div class="row form-contact" style="margin-right: 150px">
                            <div class="row main">
                                <% if(data) { %>
                                <% data.forEach(function (p) { %>
                                <form action='/admin/program/<%= p._id%>' method='post'>

                                    <div class="col-md-6">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Title: </label>
                                            <input class="form-control" name="title" id="title" type="text" value="<%= p.title %>">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Description: </label>
                                            <textarea class="form-control" id="description" name="description" ><%- p.description %></textarea>
                                            <script>
                                                CKEDITOR.replace( 'description' );
                                            </script>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Image: </label>
                                            <input class="form-control" name="image" id="image" type="text" value="<%= p.image %>">
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group organic-form xs-radius">
                                            <label>Vreme: </label>
                                            <input class="form-control" name="time" id="time" type="text" value="<%= p.time %>">
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group organic-form xs-radius">
                                            <button class="btn btn-brand pill" type="submit" name="Submit">Update program</button>
                                        </div>
                                    </div>
                                </form>
                                <% })} %>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </section>
</div>
<% include ../partials/footer.ejs %>


</body>
</html>



