<!DOCTYPE html>
<html>
<head>
    <% include ../partials/scripts.ejs %>



</head>
<body class="animsition">
<div class="shop-layout-3" id="page">
    <% include ../partials/header.ejs %>

    <section >
        <div class="container" style="width: 100%">
            <div class="row">
                <% include ../partials/adminheader.ejs %>


                <div class="col-md-8">

                    <div class="container text-left">

                        <div class="row form-contact" style="margin-right: 150px">
                            <div class="row main">
                                <p>Termini lista</p>
                                <a href="/admin/create">Create termin</a>
                                <table class="shop_attributes table table-striped table-bordered">
                                    <tbody>
                                    <tr style='text-align:left; background-color:#CCC'>
                                        <th>Title</th>
                                        <th>Trener</th>
                                        <th>Vreme</th>
                                        <th>Dan</th>
                                        <th>Action</th>
                                    </tr>

                                    <% if(data) { %>
                                    <% data.forEach(function (video) { %>


                                    <tr>
                                        <td><%= video.title %></td>
                                        <td><%= video.trainer %></td>
                                        <td><%= video.time %></td>

                                        <td><%= video.day %></td>
                                        <td>
                                            <div style="float:left">
                                                <a href="#"> <button>Edit</button></a>
                                                <form method="post" action="/admin/video/delete/<%= video._id %>" style="float:right">
                                                    <input type="submit" name="delete" value='Delete' onClick="return confirm('Are you sure you want to delete?')" />
                                                    <input type="hidden" name="_method" value="DELETE" />
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    <% })} %>

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </section>
</div>
<% include ../partials/footer.ejs %>

</body>
</html>



